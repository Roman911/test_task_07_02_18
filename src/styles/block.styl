@import'./variables.styl';

.block
  margin 7px
  padding 35px 0
  background-color $white
  box-shadow 0 2px 5px 0 $darkGray
  &__header
    margin-bottom 20px
    > h3
      font-size 1.6rem
  &__text
    margin-bottom 25px
    > p
      line-height 1.8
  &__graduation
    display flex
    justify-content center
    font-size 1.5rem
    color $darkGray
    padding 3px
  &__chevron
    display flex
    justify-content center
    color $darkGray
    font-size 1.3rem
    padding 3px
    cursor pointer

.block
  .grid-container.showed
    .block__header
      margin 0
    .block__text
      display none
    .block__chevron
      transform rotate(180deg)

@media screen and (max-width: $mobile)
  .block
    &__header
      text-align center
      padding 0 20px
    &__text
      padding 0 20px
    &__chevron
      display none