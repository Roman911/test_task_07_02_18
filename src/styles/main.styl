@import'./variables.styl';

.main
  position absolute
  width 100%
  top 34%
  left 50%
  transform translateX(-50%)
  .page-content
    .img
      display flex
      justify-content center
    .header
      color $white
      width 100%
      margin-bottom 10px
    .subtitle
      color $white
      margin-bottom 30px
    .subtitle
      width 100%

@media screen and (max-width: $mobile)
  .main
    top 10%
    .order-1
      order 1
    .order-2
      order 2
      padding 80px 0 60px
      .header
        margin-top 25px
        text-align center
        > h1
          font-size 1.8rem
          font-weight 100
      .subtitle
        display none
    .order-3
      order 3
    .display-none
      display none