@import'./variables.styl';

.nav-bar
  display flex
  justify-content space-between
  background-color $darkBlue
  .logo
    flex-grow 1
    display flex
    justify-content center
    align-items center
    > a
      display flex
      align-items center
      text-decoration none
      height 100%
      padding 0 4px
      &:hover
        background-color $darkBlue - 25%
        transition .5s
      > h2
        color $white
        font-family Roboto-Thin, sans-serif
        font-weight 100
        &:nth-of-type(2)
          display none
  .page-content
    flex-grow 8
    .search
      border-radius 2px
      margin 7px 20px
      max-width 850px
      display flex
      justify-content space-between
      background-color $white
      box-shadow 2px 2px 5px 1px $darkGray
      padding 8px 17px
      &__marker
        .fa-map-marker-alt
          color $red
          margin-right 5px
        .fa-caret-down
          color $darkGray
      &__magnifier
        color $darkGray
  .account
    flex-grow 1
    display flex
    justify-content flex-end
    align-items center
    padding 0 20px
    &__massage
      position relative
      display flex
      align-items center
      margin-right 30px
      .fa-bell
        color $darkGray
        font-size 1.2rem
      .item
        position absolute
        top -2px
        right -20px
        transform translate(-50%, -50%)
        border none
        border-radius 8px
        padding 2px 5px
        background-color $red
        color $lightGray
        font-size .8rem
    &__avatar
      height 37px
      width 37px
      background-image url('./../assets/image/avatar.png')
      background-position center, center
      background-size cover

input[type=text]
  width 90%
  box-sizing border-box
  border none

@media screen and (max-width: $mobile)
  .nav-bar
    .logo
      padding 0 10px
      > a
        > h2
          &:nth-of-type(1)
            display none
          &:nth-of-type(2)
            display block
    .page-content
      .search
        margin 7px 10px
    .account
      padding 0 10px
      &__massage
        margin-right 10px
        > p
          display none

  input[type=text]
    width 65%
